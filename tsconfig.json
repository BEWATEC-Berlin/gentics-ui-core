{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noEmit": true,
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "node_modules",
        "dist/",
        "docs/",
        "src/docs/main.aot"
    ]
}
