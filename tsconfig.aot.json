{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es5", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "aot"
    },
    "files": [
        "typings/index.d.ts",
        "typings/webpack-require.d.ts",
        "src/docs/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": false
    }
}
